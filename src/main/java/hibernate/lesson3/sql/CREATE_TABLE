CREATE TABLE HOTEL (
HOTEL_ID NUMBER,
CONSTRAINT HOTEL_PK PRIMARY KEY (HOTEL_ID),
NAME NVARCHAR2(20),
COUNTRY NVARCHAR2(20),
CITY NVARCHAR2(20),
STREET NVARCHAR2(20));

CREATE TABLE ROOM (
ROOM_ID NUMBER,
CONSTRAINT ROOM_PK PRIMARY KEY (ROOM_ID),
NUMBER_OF_GUESTS NUMBER(20),
PRICE NUMBER(10,2),
BREAKFAST_INCLUDED NUMBER(1) NOT NULL,
CHECK (BREAKFAST_INCLUDED BETWEEN 0 AND 1),
PETS_ALLOWED NUMBER(1) NOT NULL,
CHECK (PETS_ALLOWED BETWEEN 0 AND 1),
DATE_AVAILABLE_FROM TIMESTAMP,
HOTEL_ID NUMBER,
CONSTRAINT HOTEL_FK FOREIGN KEY (HOTEL_ID) REFERENCES HOTEL(HOTEL_ID));