CREATE TABLE "USER"(
  USER_ID NUMBER,
  CONSTRAINT USER_PK PRIMARY KEY (USER_ID),
  USER_NAME NVARCHAR2(50) NOT NULL,
  PASSWORD NVARCHAR2(50) NOT NULL,
  COUNTRY NVARCHAR2(50),
  USER_TYPE NUMBER(1),
  CHECK (USER_TYPE BETWEEN 0 AND 1)
);

CREATE TABLE "ORDER"(
  ORDER_ID NUMBER,
  CONSTRAINT ORDER_PK PRIMARY KEY (ORDER_ID),
  USER_ID NUMBER NOT NULL,
  CONSTRAINT USER_FK FOREIGN KEY (USER_ID) REFERENCES "USER"(USER_ID),
  ROOM_ID NUMBER NOT NULL,
  CONSTRAINT ROOM_FK FOREIGN KEY (ROOM_ID) REFERENCES ROOM(ROOM_ID),
  DATE_FROM TIMESTAMP NOT NULL,
  DATE_TO TIMESTAMP NOT NULL,
  MONEY_PAID NUMBER (10, 2)
);

CREATE TABLE ROOM(
  ROOM_ID NUMBER,
  CONSTRAINT ROOM_PK PRIMARY KEY (ROOM_ID),
  NUMBER_OF_GUESTS NUMBER(2),
  PRICE NUMBER (10,2),
  BREAKFAST_INCLUDED NUMBER(1),
  CHECK (BREAKFAST_INCLUDED BETWEEN 1 AND 0),
  PETS_ALLOWED NUMBER(1),
  CHECK (PETS_ALLOWED BETWEEN 0 AND 1),
  DATE_AVAILABLE_FROM TIMESTAMP,
  HOTEL_ID NUMBER NOT NULL,
  CONSTRAINT HOTEL_FK FOREIGN KEY (HOTEL_ID) REFERENCES HOTEL(HOTEL_ID)
);

CREATE TABLE HOTEL (
  HOTEL_ID NUMBER,
  CONSTRAINT HOTEL_PK PRIMARY KEY (HOTEL_ID),
  NAME NVARCHAR2(20),
  COUNTRY NVARCHAR2(20),
  CITY NVARCHAR2(20),
  STREET NVARCHAR2(20),
);

CREATE SEQUENCE HOTEL_SEQUENCE
  MINVALUE 1
  START WITH 1
  INCREMENT BY 1
  CACHE 20;

CREATE SEQUENCE ROOM_SEQUENCE
  MINVALUE 1
  START WITH 1
  INCREMENT BY 1
  CACHE 20;

CREATE SEQUENCE USER_SEQUENCE
  MINVALUE 1
  START WITH 1
  INCREMENT BY 1
  CACHE 20;

CREATE SEQUENCE ORDER_SEQUENCE
  MINVALUE 1
  START WITH 1
  INCREMENT BY 1
  CACHE 20;